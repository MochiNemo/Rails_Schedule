<% if flash[:alart] %>
  <p class = "notice alart"><%= flash[:alart] %></p>
<% else %>
  <h3>スケジュール新規作成</h3>
<% end %>

<%= render "shared/error", obj: @schedule %>

<%= form_with model: @schedule, local: true do |f| %>

<table class ="new-table">
  <tr>
    <th><%= f.label:title, "タイトル" %></th>
    <td><%= f.text_field:title, class:"new-content" %></td>
  </tr>
  <tr>
    <th><%= f.label:start_date, "開始日" %></th>
    <td><%= f.date_field:start_date, class:"new-content" %></td>
  </tr>
  <tr>
    <th><%= f.label:end_date, "終了日" %></th>
    <td><%= f.date_field:end_date, class:"new-content" %></td>
  </tr>
  <tr>
    <th><%= f.label:all_day, "終日" %></th>
    <td><%= f.check_box:all_day, class:"new-content" %><br>終日の場合はチェックを入れます</td>
  </tr>
  <tr>
    <th><%= f.label:memo, "スケジュールメモ" %></th>
    <td><%= f.text_area:memo, class:"new-content" %></td>
  </tr>
</table>

<div>
  <ul>
    <li class = "submit"><%= f.submit "スケジュールを新規作成する" %></li>
    <li><%= link_to "スケジュール一覧に戻る", :schedules %></li>
  </ul>
</div>
<% end %>